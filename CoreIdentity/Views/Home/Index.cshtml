    <form class="w-50 mx-auto p-4 mt-3 shadow" asp-action="GirisYap" method="post">
        <h4 class="text-center lead">Giriş Yap</h4>
        <div class="form-group">
            <label asp-for="UserName"></label>
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input asp-for="UserName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label">Beni Hatırla</label>
        </div>
        <input type="submit" class="btn btn-primary" value="Giriş Yap" />
        <small>Hesabınız Yok Mu? <a asp-action="KayitOl" class="btn btn-link">Kayıt Ol</a></small>
    </form>
</body>
