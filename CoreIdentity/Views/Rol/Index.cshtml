@model List<AppRole>
@{
    Layout = "_Layout";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
        
            <a asp-action="AddRole" asp-controller="Rol" class="btn btn-info btn-sm my-2">Yeni Rol Ekle</a>
            <table class="table table-hover table-sm">
                <tr>
                    <td>Ad</td>
                    <td>İşlem</td>
                    
                </tr>
                @if (Model.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <a asp-action="UpdateRole" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                                <a asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td>Sisteminizde kayıtlı rol bulunmuyor</td>
                    </tr>
                }
                
                
            </table>

        </div>
    
        
    

    </div>
</div>